{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "bun --watch --port 3000 src/index.ts 2>/dev/null || echo 'API server already running on port 3000 - visit http://localhost:3000'",
    "serve": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.0",
    "@pocket-pixie/db": "workspace:^",
    "@pocket-pixie/validators": "workspace:^",
    "@scalar/hono-api-reference": "^0.9.16",
    "awilix": "^12.0.5",
    "hono": "^4.9.4",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@pocket-pixie/eslint-config": "workspace:^",
    "@pocket-pixie/typescript-config": "workspace:^",
    "bun-types": "^1.2.21",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
