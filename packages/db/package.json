{
  "name": "@pocket-pixie/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"turso dev --db-file local.db || echo 'Turso dev server already running'\" \"drizzle-kit studio || echo 'Drizzle Studio already running'\"",
    "db:run": "turso dev --db-file local.db",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx seed.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist migrations/*.sql"
  },
  "dependencies": {
    "@better-auth/expo": "^1.3.7",
    "@hono/zod-openapi": "^1.1.0",
    "@libsql/client": "^0.15.14",
    "better-auth": "^1.0.0",
    "drizzle-orm": "^0.44.5",
    "ioredis": "^5.7.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@pocket-pixie/eslint-config": "workspace:^",
    "@pocket-pixie/typescript-config": "workspace:^",
    "@types/node": "^24.3.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  }
}
